{% extends 'ZzChezZzortellBundle::layout.html.twig' %}

{% trans_default_domain 'ZzChezZzortellBundle_index' %}

{% block headers %}<meta name="viewport" content="width=552" />{% endblock %}

{% block stylesheets %}
	{{ parent () }}
	{% stylesheets 'bundles/zzchezzzortell/css/index.less' filter='cssrewrite' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block utils %}
	{#<script src="{{ asset('js/less.min.js') }}" type="text/javascript" ></script>#}
	{#<script src="{{ asset('js/jquery-1.11.2.js') }}" type="text/javascript" ></script>#}
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('bundles/zzchezzzortell/js/dynamic.js') }}" type="text/javascript" ></script>
{% endblock %}


{% block body %}
{% autoescape false %}
	<div id="intro_container" >
		{{ include ('ZzChezZzortellBundle::header.html.twig') }}<!--
	@white-space : http://www.alsacreations.com/astuce/lire/1432-display-inline-block-espaces-indesirables.html
	 --><section id="author">
			<div class="author_column" >
				<h1>{{ 'author.title' |trans }}</h1>
				<article>
					<h2>{{ 'author.who.title' |trans }}</h2>
					<p class="no_indent no_justify" >
						{{ 'author.who.p0' |trans }}
					</p>
					<p class="no_indent" >
						{{ 'author.who.p1' |trans }}
					</p>
					<p>
						{{ 'author.who.p2' |trans }}
					</p>
					<p>
						{{ 'author.who.p3' |trans }}
					</p>
				</article>
				
				<article id="contact" >
					<h2>{{ 'author.contact.title' |trans }}</h2>
					<p class="no_indent" >
						{{ 'author.contact.p' |trans }}
					</p>
				</article>
			</div><!--
		@white-space
		 --><div class="author_column" >
				<article>
					<h2>{{ 'author.skills.title' |trans }}</h2>
				</article>
				<article>
					<h2>{{ 'author.abilities.title' |trans }}</h2>
				</article>
			</div>
		</section>
	</div>
	
	<section id="projects" >
		<h1>{{ 'projects.title' |trans }}</h1>
		
			{% macro description ( project, link, nb_traits ) %}
			{% autoescape false %}
				<div class="description_container" >
					<h1>
						{% if link %}
						<a href="{{ link }}" title="{{ ( 'projects.' ~ project ~ '.tooltip' ) |trans }}" >
						{% endif %}
							{{ ( 'projects.' ~ project ~ '.name' ) |trans }}
						{% if link %}</a>{% endif %}
					</h1>
					<p>{{ ( 'projects.' ~ project ~ '.description' ) |trans }}</p>
					{% if nb_traits %}
					<ul>
						{% for i in 1..nb_traits %}
						<li>{{ ( 'projects.' ~ project ~ '.trait' ~ loop.index ) |trans }}</li>
						{% endfor %}
					</ul>
					{% endif %}
				</div><!-- @white-space
		 -->{% endautoescape %}{% endmacro %}
			{% import _self as project %}
		
		<section>
			{{ project.description ('chez_zz', null, 4) }}
		</section>
		<br/>
		<section>
			{{ project.description ('sabrejunior', "http://sabrejunior-france2014.fr/", 3) }}<!-- @white-space
		 --><figure>
				<img src="{{ asset('bundles/zzchezzzortell/images/affiche.png') }}" 
					 alt="{{ 'projects.sabrejunior.poster.alt' |trans }}"
					 class="round-corner" />
			</figure>
		</section>
		
		<div class="projects_column_container" >
			<div class="projects_column" class="past" >
				<h2>{{ 'projects.past.title' |trans }}</h2>
				<section>
					{{ project.description (
						'past.tetris', asset('bundles/zzchezzzortell/tetris/index.php')
					) }}
				</section>
				
				<div>
					<h3>
						{{ 'projects.past.archives.title' |trans }}
					</h3>
					<h4>
						<div>{{ 'projects.past.archives.sub_title' |trans }}</div>
					</h4>
					<section>
						{{ project.description (
							'past.archives.tpe'
						) }}<!-- @white-space
					 --><figure>
							<figcaption>Aper√ßu</figcaption>
							<img src="{{ asset('bundles/zzchezzzortell/images/tpe_capture1.png') }}" 
								 alt="{{ 'projects.past.tetris.survey.alt' |trans }}"
								 class="half" />
							<img src="{{ asset('bundles/zzchezzzortell/images/tpe_capture2.png') }}" 
								 alt="{{ 'projects.past.tetris.survey.alt' |trans }}"
								 class="half" />
						</figure>
					</section>
					<section>
						{{ project.description (
							'past.archives.hammer', asset('bundles/zzchezzzortell/hammer1st!/index.php')
						) |replace({ '%hammer1st!/niveaux%': asset('bundles/zzchezzzortell/hammer1st!/niveaux/index.php') }) }}
					</section>
				</div>
			</div><!-- @white-space
		 --><div class="projects_column" >
				<h2>{{ 'projects.present.title' |trans }}</h2>
				<h2>{{ 'projects.future.title' |trans }}</h2>
			</div>
		</div>
	</section>
	
	<footer>
		<h1>{{ 'footer.historic.title' |trans }}</h1>
		
		<p>
			{{ 'footer.historic.4' |trans }}
		</p>
		<p>
			{{ 'footer.historic.3' |trans }}
		</p>
		<p>
			{{ 'footer.historic.2' |trans }}
		</p>
		<p>
			{{ 'footer.historic.1' |trans }}
		</p>
		<p>
			{{ 'footer.historic.0' |trans }}
		</p>
	</footer>
{% endautoescape %}
{% endblock %}